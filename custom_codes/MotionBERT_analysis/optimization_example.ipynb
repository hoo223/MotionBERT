   "source": [
    "import scipy\n",
    "from scipy import optimize"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 9,
   "metadata": {},
   "outputs": [],
   "source": [
    "def func(x):\n",
    "    return x**3-1\n",
    "\n",
    "def derivative(x):\n",
    "    return 3*x**2"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 10,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Solution =        converged: True\n",
      "           flag: 'converged'\n",
      " function_calls: 12\n",
      "     iterations: 6\n",
      "           root: 1.0\n"
     ]
    }
   ],
   "source": [
    "sol = optimize.root_scalar(func, x0=1.5, method='newton', fprime=derivative)\n",
    "\n",
    "if sol.converged == True:\n",
    "    print('Solution = ', sol)    "
   ]
  },
